{% extends 'base.html.twig' %}

{% block title %}Création de bug{% endblock %}

{% block body %}
{{ form_start(form) }}
{{ form_errors(form) }}

<div class="form-group">
{{ form_row(form.title) }}
</div>
<div class="form-group">
{{ form_row(form.description) }}
</div>
<div class="form-group">
{{ form_row(form.status) }}
</div>
<div class="form-group">
{{ form_row(form.languages) }}
</div>
<div class="form-group">
{{ form_row(form.githubLink) }}
</div>

{{ form_end(form) }}
<a href="/bugs"><button class="btn btn-primary">Retour à la liste</button></a>
{% endblock %}

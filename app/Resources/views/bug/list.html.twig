{% extends 'base.html.twig' %}

{% block title %}Liste des bugs{% endblock %}

{% block body %}
<table class="table table-striped">
<th>Id</th>
<th>Titre</th>
<th>Langages</th>
<th>Créateur</th>
<th>Date de création</th>
<th>Statut</th>
<th>Actions</th>
{% for bug in bugs %}
<tr>
<td>{{ bug.id }}</td>
<td>{{ bug.title }}</td>
<td>{{ bug.languages }}</td>
<td>{{ bug.creator.username }}</td>
<td>{{ bug.creationDate|localizeddate('long', 'short')  }}</td>
<td>
{% if bug.solved %}
<span class="label label-success">Résolu</span>
{% else %}
<span class="label label-danger">En cours</span>
{% endif %}
</td>
<td>
<a href="/bug/{{ bug.id }}"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a>
<a href="/bug_edit/{{ bug.id }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
<a href="/bug_delete/{{ bug.id }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
</td>
</tr>
{% endfor %}
</table>
<a href="/bug_new"><button class="btn btn-primary">Créer un nouveau bug</button></a>
{% endblock %}
